<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         stylesheets="@view_mail.css"
         style="-fx-background-color: rgba(0,0,0,0.6); -fx-padding: 10"
>
    <StackPane StackPane.alignment="CENTER"
               alignment="CENTER" style="-fx-background-color:#f5f5f5; -fx-background-radius: 8; -fx-padding:10"
               maxHeight="550" maxWidth="800">
        <effect>
            <DropShadow radius="8" color="rgba(0,0,0,0.2)"/>
        </effect>

        <VBox spacing="20">
            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints halignment="LEFT" minWidth="80"/>
                    <ColumnConstraints halignment="LEFT"/>
                </columnConstraints>

                <Label text="Da:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="meta-title"/>
                <Label fx:id="sender" styleClass="meta-text"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="A:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="meta-title"/>
                <Label fx:id="receivers" wrapText="true" styleClass="meta-text"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Oggetto:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="meta-title"/>
                <Label fx:id="subject" styleClass="meta-text"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>
            <Separator orientation="HORIZONTAL">
                <opacity>0.4</opacity>   <!-- semi-transparent -->
            </Separator>
            <TextArea fx:id="message"
                      editable="false"
                      focusTraversable="false"
                      wrapText="true"
                      styleClass="area-viewer"
                      prefRowCount="15"/>

            <HBox spacing="10" alignment="CENTER">
                <Button styleClass="interaction-button" text="Rispondi" fx:id="reply" onAction="#onReply"/>
                <Button styleClass="interaction-button" text="Rispondi a tutti" fx:id="replyAll"
                        onAction="#onReplyAll"/>
                <Button styleClass="interaction-button" text="Inoltra" fx:id="forward" onAction="#onForward"/>
                <Button styleClass="interaction-button-delete" text="Elimina" fx:id="delete" onAction="#onDelete"/>
            </HBox>

        </VBox>

        <StackPane StackPane.alignment="TOP_RIGHT" alignment="TOP_RIGHT" style="-fx-padding:2" maxWidth="20"
                   maxHeight="20">
            <Button fx:id="closeBtn" onAction="#onClose" styleClass="close-btn">
                <graphic>
                    <FontIcon iconLiteral="mdi2c-close" iconColor="#0c0c0c" iconSize="18"/>
                </graphic>
            </Button>
        </StackPane>

    </StackPane>

</fx:root>
